<theme>

    <formatVersion>7</formatVersion>
	
	<feature supported="carousel">
		<view name="system">
			<carousel name="systemcarousel">
				<color>000000cc</color>
				<logoSize>0.22 0.115</logoSize>
				<logoScale>1.7</logoScale>
			</carousel>
			
			<text name="logoText">
				<forceUppercase>true</forceUppercase>
				<color>ffffff</color>
			</text>

			<text name="systemInfo">
				<backgroundColor>11111199</backgroundColor>
				<color>FFFFFF</color>
				<fontPath>./_inc/fonts/RobotoCondensed-Regular.ttf</fontPath>
				<fontSize>0.035</fontSize>
			</text>
		</view>
	</feature>

    <view name="system, basic, detailed, video">
		<image name="background_color" extra="true">
			<path>./_inc/images/bg_color.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<color>d4d4d4</color>
		</image>
		<image name="background_pattern" extra="true">
			<path>./_inc/images/bg_color.png</path>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<size>1 1</size>
			<color>aeaeae</color>
			<tile>true</tile>
		</image>
		<image name="background_help" extra="true">
			<path>./_inc/images/bg_color.png</path>
			<origin>0 1</origin>
			<pos>0 1</pos>
			<size>1 0.070</size>
			<color>000000aa</color>
		</image>
		<helpsystem name="help">
			<textColor>FFFFFF</textColor>
			<iconColor>FFFFFF</iconColor>
			<fontPath>./_inc/fonts/Roboto-Light.ttf</fontPath>
		</helpsystem>
	</view>
    
	<view name="basic">
		<image name="background_logo" extra="true">
			<path>./_inc/images/bg_color.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 0.16</size>
			<color>000000aa</color>
		</image>
		<image name="logo">
			<origin>0.5 0</origin>
			<pos>0.5 0.02</pos>
			<maxSize>1 0.12</maxSize>
		</image>
		<text name="logoText">
			<origin>0.5 0</origin>
			<pos>0.5 0.02</pos>
			<size>1 0.12</size>
			<fontSize>0.12</fontSize>
			<color>ffffff</color>
		</text>
		<image name="gamelist_background" extra="true">
			<path>./_inc/images/bg_color.png</path>
			<origin>0.5 0</origin>
			<pos>0.5 0.18</pos>
			<size>0.96 0.73</size>
			<color>000000aa</color>
		</image>
		<textlist name="gamelist">
			<selectorColor>000000</selectorColor>
			<selectedColor>FFFFFF</selectedColor>
			<primaryColor>BBBBBB</primaryColor>
			<secondaryColor>ffff80</secondaryColor>
			<fontPath>./_inc/fonts/RobotoCondensed-Regular.ttf</fontPath>
			<pos>0.03 0.19</pos>
			<size>0.937 0.69</size>
			<fontSize>0.035</fontSize>
			<lineSpacing>1.40</lineSpacing>
		</textlist>
	</view>
	
    <view name="detailed">
		<image name="md_image">
		<origin>0.5 1</origin>
		<pos>0.195 0.89</pos>
		<maxSize>0.325 0.6</maxSize>
		</image>
	</view>

	<feature supported="video">
		<view name="video">
			<video name="md_video">
				<origin>0.5 1</origin>
				<pos>0.195 0.89</pos>
				<maxSize>0.325 0.325</maxSize>
				<delay>1</delay>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>true</showSnapshotDelay>
				<effect>none</effect>
			</video>

			<image name="md_marquee">
				<maxSize>0.325 0.260</maxSize>
				<pos>0.195 0.55</pos>
				<origin>0.5 1</origin>
			</image>
		</view>
	</feature>
	
	<feature supported="z-index">
		<view name="video">
				<video name="md_video">
				<zIndex>120</zIndex>
				</video>
				<image name="md_marquee">
				<zIndex>140</zIndex>
				</image>
		</view>
	</feature>
	
	<view name="detailed,video">
	<image name="metadata_background" extra="true">
		<path>./_inc/images/bg_color.png</path>
		<origin>0 0</origin>
		<pos>0.02 0.02</pos>
		<size>0.35 0.89</size>
		<color>000000aa</color>
	</image>

	<image name="gamelist_background" extra="true">
		<path>./_inc/images/bg_color.png</path>
		<origin>0 0</origin>
		<pos>0.38 0.02</pos>
		<size>0.60 0.89</size>
		<color>000000aa</color>
	</image>

	<image name="logo">
		<origin>0.5 0</origin>
		<pos>0.195 0.04</pos>
		<maxSize>0.325 0.16</maxSize>
	</image>
	
	<text name="logoText">
		<origin>0.5 0</origin>
		<pos>0.195 0.04</pos>
		<size>0.325 0.16</size>
		<fontSize>0.08</fontSize>
		<lineSpacing>1</lineSpacing>
		<color>ffffff</color>
	</text>
	
	<textlist name="gamelist">
		<selectorColor>000000</selectorColor>
		<selectedColor>FFFFFF</selectedColor>
		<primaryColor>BBBBBB</primaryColor>
		<secondaryColor>ffff80</secondaryColor>
		<fontPath>./_inc/fonts/RobotoCondensed-Regular.ttf</fontPath>
		<pos>0.39 0.03</pos>
		<size>0.577 0.86</size>
		<fontSize>0.035</fontSize>
		<lineSpacing>1.50</lineSpacing>
		<horizontalMargin>0.01</horizontalMargin>
	</textlist>
	
	<image name="md_hidden">
	<pos>0.195 0.275</pos>
	<path>./_inc/images/hidden.png</path>
	<maxSize>0.06 0.06</maxSize>
	<origin>0.5 1</origin>
	</image>
	
	<image name="md_kidgame">
	<pos>0.085 0.275</pos>
	<path>./_inc/images/child.png</path>
	<maxSize>0.06 0.06</maxSize>
	<origin>0.5 1</origin>
	</image>
	
	<image name="md_favorite">
	<pos>0.305 0.275</pos>
	<path>./_inc/images/star.png</path>
	<maxSize>0.06 0.06</maxSize>
	<origin>0.5 1</origin>
	</image>

        <image name="mastered">
        <pos>0.415 0.275</pos>
        <path>./_inc/images/mastered.png</path>
        <maxSize>0.06 0.06</maxSize>
        <origin>0.5 1</origin>
        </image>
	
	<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
		<pos>1 1</pos>
	</text>
	
	<text name="md_rating, md_releasedate, md_developer, md_publisher, md_genre, md_players, md_lastplayed, md_playcount, md_description, md_name">
    <pos>1 1</pos>
	</text>
	
	<rating name="md_rating">
    <pos>1 1</pos>
	</rating>
	
	<datetime name="md_releasedate, md_lastplayed">
    <pos>1 1</pos>
	</datetime>
	
	</view>

	<view name="menu">
	
    <menuBackground name="menubg">
      <color>2d2d2d</color>
    </menuBackground>
	
	<menuText name="menutext, menutitle">
      <fontPath>./_inc/fonts/RobotoCondensed-Regular.ttf</fontPath>
      <fontSize>.039</fontSize>
      <color>ffffff</color> 
    </menuText>
	
	<menuTextEdit name="menutextedit">
      <inactive>./_inc/images/textinput_inactive.png</inactive>
      <active>./_inc/images/textinput_active.png</active>
    </menuTextEdit>
	
	<menuText name="menufooter, menutextsmall">
      <fontPath>./_inc/fonts/RobotoCondensed-Regular.ttf</fontPath>
      <fontSize>.029</fontSize>		 
      <color>ffffff</color>
    </menuText>
    </view>

</theme>
